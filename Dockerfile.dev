# ─── Dockerfile.dev ───
FROM golang:1.25-alpine

# Install dependencies
RUN apk add --no-cache git bash tzdata

# Install Air for live reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy go.mod and go.sum first
COPY go.mod go.sum ./
RUN go mod download

# Copy everything
COPY . .

# Expose port
EXPOSE 8080

CMD ["air", "-c", ".air.toml"]
